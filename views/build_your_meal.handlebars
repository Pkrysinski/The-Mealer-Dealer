{{!-- This is the container for the "Build Your Meal" form --}}
{{#if logged_in}}
<div class='build-meal-container'>
    <h2>
        Please enter in some info about your meal plan!
    </h2>
    <form class='build-meal-form'>
        
        <label for="totalTime">Total time:</label>
        <input type="number" id="total_time" name="total_time" min="1" max="999">

        <label for="quantityOfMeals">Quantity of Meals (between 1 and 10):</label>
        <input type="number" id="quantityOfMeals" name="quantityOfMeals" min="1" max="10">

        <label for="quantityOfPeople">Quantity of People (between 1 and 10):</label>
        <input type="number" id="quantityOfPeople" name="quantityOfPeople" min="1" max="10">        

        <label for="proteinChoice">Choose a protein:</label>
        <select id="main_protein" name="main_protein" class="browser-default">
            <option value="any">Any</option>
            <option value="beef">Beef</option>
            <option value="chicken">Chicken</option>
            <option value="fish">Fish</option>
            <option value="pork">Pork</option>
            <option value="vegetarian">Vegetarian</option>
        </select>

        <button type='submit' value='Submit' id='submitMealBtn'>
        Submit
        </button>
    </form>
</div>

<script src="/js/buildmeal.js"></script>

{{else}}
<a href="/login">You must login first to view this page</a>
{{/if}}